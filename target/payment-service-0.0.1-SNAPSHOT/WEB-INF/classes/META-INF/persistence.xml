<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<!-- Will be referenced in Spring Context File -->
	<persistence-unit name="payment-persistence" transaction-type="RESOURCE_LOCAL">
		<class>com.safeway.payment.domain.TransactionResponse</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:xe" />
			<property name="javax.persistence.jdbc.user" value="safeway" />
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver" />
			<property name="javax.persistence.jdbc.password" value="safeway" />
			 <!-- <property name="eclipselink.logging.level" value="DEBUG"/>
			
			 <property name="eclipselink.logging.parameters" value="true"/> 
			 --> 
		</properties>
	</persistence-unit>
</persistence>

